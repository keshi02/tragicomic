<div class="container", style = "height: 100vh;">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto mt-5">
      <h1><%= t('.title') %></h1>
      <%= form_with url: password_resets_path do |f| %>
        <div class="mb-4">
          <%= f.label :email , t('activerecord.attributes.user.email'), class: "pt-3" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="d-flex justify-content-end">
        <%= f.submit t('helpers.submit'), class: "btn btn-warning" %>
        </div>
      <% end %>
    </div>
  </div>
</div>