<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto mt-5">
      <h1><%= t('user_session.new.title') %></h1>
      <%= form_with url: login_path do |f|%>
        <div class="mb-5">
          <%= f.label :email, t('label.email'), class: "mt-4" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-5">
          <%= f.label :password, t('label.password') %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class='text-center  flex-column'>
          <%= link_to t('user_session.new.to_register_page'), new_user_path %>
          <%= link_to t('user_session.new.password_forget'), "#" %>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
          <%= f.submit t('helpers.create'), class: "btn btn-warning" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
