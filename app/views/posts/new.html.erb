<div class="container pt-5 pb-5">
  <div class="row border pt-5 pb-5 col-xl-7 col-lg-8 col-md-10 col-sm-11 col-xs-12 mx-auto">
    <div class="ms-2">
    <h1><%= t('.title') %></h1>
    <%= form_with model: @post do |f|%>
      <div class="mb-3 me-3">
        <%= f.label :name, t('helper.name'), class: "mt-4" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="mb-3 me-3">
        <%= f.label :post_image %>
        <%= f.file_field :post_image, class: "form-control", accept: 'image/*' %>
      </div>
      <div class="mb-3 me-3">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", size: "20x7" %>
      </div>
   
      <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4 me-3">
        <%= f.submit t('defaults.post'), class: "btn btn-warning" %>
      </div>
    <% end %>
    </div>
  </div>
</div>